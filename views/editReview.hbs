{{>navbar}}
 <style>
    body{
        background-image: url('img/aerialwalk.jpg'); 
        background-size: 100% 100%; 
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 style="color: black;">Edit Review for {{it_name}}</h2>
        </div>
        <form method="POST">
        <div class="col-lg-2">
            <h2><button type="submit" id="review" class="btn btn-success btn-block">Save Review</button></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/itineraries" class="btn btn-success btn-block" role="button" >Back to Itineraries</a></h2>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                    <div class="panel-heading">
                        <label for="stars">Star Rating:</label>
                                          <span class="glyphicon glyphicon-star" id="star1" style="color: rgb(231, 231, 59);"></span>
                        {{#if_eq stars 1}}<span class="glyphicon glyphicon-star" id="star2"></span>
                                          <span class="glyphicon glyphicon-star" id="star3"></span>
                                          <span class="glyphicon glyphicon-star" id="star4"></span>
                                          <span class="glyphicon glyphicon-star" id="star5"></span>{{/if_eq}}
                        {{#if_eq stars 2}}<span class="glyphicon glyphicon-star" id="star2" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star3"></span>
                                          <span class="glyphicon glyphicon-star" id="star4"></span>
                                          <span class="glyphicon glyphicon-star" id="star5"></span>{{/if_eq}}
                        {{#if_eq stars 3}}<span class="glyphicon glyphicon-star" id="star2" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star3" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star4"></span>
                                          <span class="glyphicon glyphicon-star" id="star5"></span>{{/if_eq}}
                        {{#if_eq stars 4}}<span class="glyphicon glyphicon-star" id="star2" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star3" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star4" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star5"></span>{{/if_eq}}
                        {{#if_eq stars 5}}<span class="glyphicon glyphicon-star" id="star2" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star3" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star4" style="color: rgb(231, 231, 59);"></span>
                                          <span class="glyphicon glyphicon-star" id="star5" style="color: rgb(231, 231, 59);"></span>{{/if_eq}}
                        <span id='starCount'>{{stars}}</span>
                        <input type="number" min="1" max="5" id='stars' name="stars" value="{{stars}}" hidden>
                    </div>
                    <div class="panel-body">
                        <textarea class="form-control" rows="5" id="content" placeholder="Write a review for this itinerary" name="content" required>{{content}}</textarea>
                        <input type="text" id="revIt_id" name="it_id" value="{{it_id}}" hidden>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>